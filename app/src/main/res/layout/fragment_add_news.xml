<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ui.owner.post.AddNewsFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_16"
            android:fontFamily="@font/catorze27_style_1"
            android:text="@string/news_comment"
            android:textColor="@color/colorMainYellow"
            android:textSize="@dimen/text_18" />

        <EditText
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_12"
            android:layout_marginRight="@dimen/size_12"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_yellow"
            android:hint="@string/news_title"
            android:importantForAutofill="no"
            android:minHeight="48dp"
            android:padding="@dimen/size_10"
            android:singleLine="true"
            tools:ignore="MissingConstraints,TextFields" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/news_wrap"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginRight="@dimen/size_12"
            android:background="@drawable/border_yellow"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck">

            <ImageView
                android:id="@+id/news_image_logo"
                android:layout_width="63dp"
                android:layout_height="69dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_photo_camera"
                app:layout_constraintBottom_toTopOf="@+id/news_image_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/news_image"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/news_image"
                android:layout_width="352dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/news_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/catorze27_style_1"
                android:text="@string/news_add_image"
                android:textColor="@color/colorMainYellow"
                android:textSize="@dimen/text_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/news_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_150"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_12"
            android:background="@drawable/border_yellow"
            android:gravity="start"
            android:hint="@string/news_description"
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="@dimen/size_120"
            android:padding="@dimen/size_10"
            tools:ignore="Autofill,MissingConstraints" />

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_news_add"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_12"
            android:background="@drawable/btn_selector"
            android:backgroundTint="@color/colorMainYellow"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/news_add"
            android:textColor="@color/colorMainBlack"
            tools:ignore="KeyboardInaccessibleWidget,MissingConstraints,UnusedAttribute" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>