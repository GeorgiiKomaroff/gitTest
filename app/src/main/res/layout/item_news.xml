<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_10"
    android:layout_marginTop="@dimen/size_15"
    android:layout_marginRight="@dimen/size_10"
    app:cardCornerRadius="@dimen/size_17"
    app:cardElevation="10dp"
    tools:context=".presentation.ui.user.news.corporate.NewsListFragment">

    <RelativeLayout
        android:id="@+id/item_news_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/item_news_image"
            android:layout_width="wrap_content"
            android:layout_height="147dp"
            android:background="@drawable/logo"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription,UnusedAttribute" />

        <ImageView
            android:id="@+id/item_news_shadow"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignBottom="@id/item_news_image"
            android:src="@drawable/gradient_shadow"
            tools:ignore="ContentDescription" />

        <FrameLayout
            android:id="@+id/item_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_news_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-34dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rectangle_rounded_white"
            android:padding="5dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_date"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/item_news_published_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:text="01 January 2020"
                android:textColor="@color/colorGrey"
                tools:ignore="HardcodedText" />
        </FrameLayout>

        <TextView
            android:id="@+id/item_news_title"
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_news_image"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorBackground"
            android:fontFamily="@font/catorze27_style1_semibold"
            android:text="Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>