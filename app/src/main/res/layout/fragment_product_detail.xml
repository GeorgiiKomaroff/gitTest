<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".presentation.ui.user.news.details.NewsDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            tools:ignore="ScrollViewSize">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="316dp"
                android:layout_height="35dp"
                android:fontFamily="@font/catorze27_style1_bold"
                android:text="@string/product_name"
                android:textColor="@color/colorMainBlack"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck" />

            <TextView
                android:id="@+id/product_country"
                android:layout_width="225dp"
                android:layout_height="25dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/catorze27_style1_semibold"
                android:text="@string/product_country"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@+id/product_image"
                app:layout_constraintTop_toBottomOf="@+id/product_name"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/catorze27_style1_bold"
                android:text="15.00"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/product_image"
                app:layout_constraintTop_toBottomOf="@+id/product_manufacture"
                tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded" />

            <TextView
                android:id="@+id/tvProductUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_2"
                android:layout_marginTop="@dimen/size_3"
                android:fontFamily="@font/catorze27_style1_semibold"
                android:text="  рублей"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@+id/product_price"
                app:layout_constraintTop_toTopOf="@+id/product_price"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/product_image"
                android:layout_width="101dp"
                android:layout_height="100dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:elevation="5mm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_name"
                tools:ignore="InOrMmUsage,MissingConstraints,UnusedAttribute,ImageContrastCheck" />

            <TextView
                android:id="@+id/product_manufacture"
                android:layout_width="122dp"
                android:layout_height="25dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/catorze27_style1_semibold"
                android:text="@string/product_manufacture"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@+id/product_image"
                app:layout_constraintTop_toBottomOf="@+id/product_country"
                tools:ignore="MissingConstraints,RtlHardcoded" />

            <View
                android:id="@+id/separator"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorMainGrey"
                app:layout_constraintTop_toBottomOf="@+id/product_image"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/separator"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.69"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/separator"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/item_style"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/catorze27_style1_semibold"
                        android:text="@string/product_style"
                        android:textSize="25sp"
                        tools:ignore="HardcodedText,SpUsage"
                        tools:layout_editor_absoluteX="214dp"
                        tools:layout_editor_absoluteY="241dp" />

                    <TextView
                        android:id="@+id/product_style"
                        android:layout_width="216dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Лагерь"
                        tools:ignore="HardcodedText,SpUsage"
                        tools:layout_editor_absoluteX="27dp"
                        tools:layout_editor_absoluteY="245dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:orientation="horizontal"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.703"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/item_fortress"
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/catorze27_style1_semibold"
                        android:text="@string/product_fortress"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/product_fortress"
                        android:layout_width="216dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:text="7%"
                        tools:ignore="HardcodedText,SpUsage"
                        tools:layout_editor_absoluteX="27dp"
                        tools:layout_editor_absoluteY="245dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.698"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/item_density"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/catorze27_style1_semibold"
                        android:text="@string/product_density"
                        android:textSize="25sp"
                        tools:ignore="HardcodedText,SpUsage" />

                    <TextView
                        android:id="@+id/product_density"
                        android:layout_width="216dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:text="12%"
                        tools:ignore="HardcodedText,SpUsage" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/product_description"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:fontFamily="@font/catorze27_style1_semibold"
                        android:text="@string/product_description"
                        android:textColor="@color/colorMainBlack"
                        android:textSize="25sp"
                        tools:ignore="HardcodedText,MissingConstraints" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_container"
                android:layout_width="367dp"
                android:layout_height="265dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
                app:layout_constraintVertical_bias="0.176"
                tools:ignore="MissingConstraints">

                <include
                    android:id="@+id/include_fragment_counter"
                    layout="@layout/fragment_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="26dp">

                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="243dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catorze27_style1_bold"
                            android:paddingEnd="10dp"
                            android:text="@string/product_price_line"
                            android:textAlignment="textEnd"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/product_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="15dp"
                            android:text="15.00"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded,RtlSymmetry" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_add_product_to_cart"
                    style="@style/AppTheme.Button"
                    android:layout_width="334dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:text="@string/cart_add"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>