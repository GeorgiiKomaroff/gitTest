<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/size_16"
    app:cardElevation="@dimen/size_10">

    <TextView
        android:id="@+id/i_counter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/size_4"
        android:text="Количество"
        android:textAlignment="center"
        android:textColor="@color/colorMainBlack"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/i_counter_tint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/counter_border"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_2"
            android:layout_marginTop="@dimen/size_2"
            android:layout_marginRight="@dimen/size_2"
            android:layout_marginBottom="@dimen/size_2"
            android:background="@drawable/counter_back"
            android:gravity="center"
            android:textAlignment="center"
            app:backgroundTint="@null">

            <TextView
                android:id="@+id/i_counter_minus"
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:background="?selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="−"
                android:textAlignment="center"
                android:textColor="@color/colorMainBlack"
                android:textSize="@dimen/size_40"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>

        <TextView
            android:id="@+id/i_counter_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_1"
            android:layout_marginBottom="@dimen/size_1"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/size_16"
            android:text="1"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorMainBlack"
            tools:ignore="HardcodedText,TextViewEdits" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_2"
            android:layout_marginTop="@dimen/size_2"
            android:layout_marginRight="@dimen/size_2"
            android:layout_marginBottom="@dimen/size_2"
            android:background="@drawable/counter_back"
            android:gravity="center"
            android:textAlignment="center">

            <TextView
                android:id="@+id/i_counter_plus"
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:background="?selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/colorMainBlack"
                android:textSize="@dimen/size_40"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>







